pipeline {
    agent any
    
    parameters {
        booleanParam(name: "BUILD", defaultValue: true, description: "Docker image Build")
        booleanParam(name: "TEST", defaultValue: true, description: "Run test")
        booleanParam(name: "PUSH", defaultValue: true, description: "Docker image push")

        // CI
        string(name: "IMANGE_NAME", defaultValue: 'exchange-rate', description: "Docker image name")
        string(name: "DOCKER_TAG", defaultValue: '1.0.0', description: "Docker tag")
        string(name: "ENV_FILE_PATH", defaultValue: "exchange-rate/.env", description:" env file path")
        //

    }

    environment {
        DOCKER_HUB_URL = "hub.1ife.kr"
    }

    stages {
        stage('ðŸ›  Build Docker Image ðŸ› ') {
            when {
                expression {
                    return params.BUILD
                }
            }
            steps {
                // env.WORKSPACEëŠ” jenkinsê°€ ì„¤ì •í•´ ì¤€ í™˜ê²½ ê°’
                // /var/jenkins_home/wrkspace/test
                dir("${env.WORKSPACE}") {
                    sh "docker build -f backend/dockerfile -t ${IMANGE_NAME}:${DOCKER_TAG} ./backend"
                }
            }
            post {
                success {
                    echo "ðŸ˜„ Docker Build success ðŸ˜„"
                }
            }
        }

        stage('ðŸ“– Run test code ðŸ“–') {
            when { 
                expression { 
                    return params.TEST 
                } 
            }
            steps {
                sh "printenv"
                sh "export"
                sh ("docker run --env-file=${env.ENV_PATH}/${params.ENV_FILE_PATH}\
                --rm ${params.IMANGE_NAME}:${params.DOCKER_TAG} python manage.py test")
            }
            post {
                success {
                    echo "ðŸ˜„ Test success ðŸ˜„"
                }
            }
        }

        // stage('ðŸ“¨') {
        //     steps {
        //         echo "Push Docker Image to ECR"
        //     }
        // }
    }
}