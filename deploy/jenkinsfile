pipeline {
    agent any

    parameters {
        booleanParam(name: "BUILD", defaultValue: true, description: "DOCKER_IMAGE_BUILD")
        booleanParam(name: "TEST", defaultValue: true, description: "RUN_TEST")
        booleanParam(name: "PUSH", defaultValue: true, description: "DOCKER_IMAGE_PUSH")
        booleanParam(name : 'DEPLOY', defaultValue : true, description : 'DEPLOY_WORKLOAD')

        // SETTINGS
        string(name: "ENV_FILE_PATH", defaultValue: "exchange-rate/.env", description:"ENV_FILE_PATH")

        // CI
        string(name: "IMAGE_NAME", defaultValue: 'exchange-rate', description: "DOCKER_IMAGE_NAME")
        string(name: "IMAGE_TAG", defaultValue: '0.3.0', description: "DOCKER_TAG")
        string(name: "DOCKER_REPOSITORY", defaultValue: "hub.1ife.kr", description: "DOCKER_TAG")
        string(name: "DOCKER_FILE", defaultValue: "backend/dockerfile", description: "DOCKER_FILE_PATH")

        // CD
        string(name : 'TARGET_USER', defaultValue : 'juniya', description : 'TARGET_SVR_USER')
        string(name : 'TARGET_SERVER', defaultValue : '1ife.kr', description : 'TARGET_SERVER_IP')
        string(name : 'TARGET_PORT', defaultValue : '4252', description : 'TARGET_SERVER_SSH_PORT')
    }

    environment {
        // CI
        DOCKER_REPOSITORY = "${params.DOCKER_REPOSITORY}"
        DOCKER_IMAGE =  "${DOCKER_REPOSITORY}/${params.IMAGE_NAME}"
        DOCKER_TAG = "${params.IMAGE_TAG}"
        ENV_FILE = "${env.JENKINS_HOME}/env/${params.ENV_FILE_PATH}"

        // CD
        TARGET_SERVER_PATH = "/home/${params.TARGET_USER}/${env.JOB_NAME}"
    }
    
    stages {
        stage('ðŸ›  Build Docker Image ðŸ› ') {
            when {
                expression {
                    return params.BUILD
                }
            }

            steps {
                // env.WORKSPACEëŠ” jenkinsê°€ ì„¤ì •í•´ ì¤€ í™˜ê²½ ê°’
                // /var/jenkins_home/wrkspace/test
                dir("${env.WORKSPACE}") {
                    sh "docker build -f backend/dockerfile -t ${DOCKER_IMAGE}:${DOCKER_TAG} ./backend"
                }
            }
            post {
                success {
                    echo "ðŸ˜„ Docker Build Success ðŸ˜„"
                }
            }
        }

        stage('ðŸ”Ž Runing Test ðŸ”Ž') {
            when {
                expression {
                    return params.TEST
                }
            }
            steps {
                sh ("docker run --env-file=${ENV_FILE}\
                --rm ${DOCKER_IMAGE}:${DOCKER_TAG} python manage.py test")
            }
            post {
                success {
                    echo "ðŸ˜„ Test Success ðŸ˜„"
                }
            }
        }

        // CD
        stage('ðŸ›« Deploy Workload ðŸ›«') {
            when {
                expression {
                    return params.DEPLOY
                }
            }
            
            steps {
                sshagent (credentials: ['worker1_ssh']) {
                    sh """ #!/usr/bin/env bash
                        scp -P ${params.TARGET_PORT} -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no  \
                        docker-compose.yml \
                        ${params.TARGET_USER}@${params.TARGET_SERVER}:${TARGET_SERVER_PATH}
                    """
                }
                

                // post {
                //     success {
                //         echo "ðŸ˜„ Target Deploy Success ðŸ˜„"
                //     }
                // }
            }
        }

        // stage('ðŸ§¹ Clean Up ðŸ§¹') {
        //     steps {
        //             // docker image prune -f
        //             // docker container prune -f
        //         sh """
        //             docker rmi ${DOCKER_IMAGE}:${DOCKER_TAG}"
        //         """
        //     }
        // }
    }
}